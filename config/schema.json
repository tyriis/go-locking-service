{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "REST-GO Configuration Schema",
  "type": "object",
  "required": ["api"],
  "properties": {
    "api": {
      "type": "object",
      "required": ["type", "port"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["rest", "graphql", "console"],
          "description": "The API type, currently only supports 'rest'"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 8080,
          "description": "The port number the API server will listen on"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}